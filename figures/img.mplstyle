# FIGURE OUTPUT 
figure.figsize:       5, 3.5
#figure.autolayout:   True
#figure.constrained_layout.use : True
#figure.titlesize:     16.5  # fontsize of the axes title
#figure.subplot.wspace: 0.08  
font.size:             16

#AXES and LINES: 
axes.labelsize :   16
lines.markersize : 1
lines.linewidth :  1.85
lines.markeredgewidth : 1

